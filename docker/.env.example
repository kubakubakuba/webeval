# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YourPostgresPasswordHere
DB_DATABASE=qtrvsim_web_eval

# Application Database User
DB_USER=qtrvsim
DB_PASSWORD=YourDatabasePasswordHere

# Database SSL Mode (prefer, require, disable)
DB_SSLMODE=prefer

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=YourSecretKeyHere

# Mail Server Configuration
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USE_TLS=False
MAIL_USE_SSL=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=YourEmailPasswordHere
MAIL_DEFAULT_SENDER=your-email@example.com

# Base URL for email links and API documentation
BASE_URL=http://localhost

# Web Server Port (optional)
WEB_PORT=8000

# Data Directories (optional - defaults to root folders if not specified)
# TEMPLATES_DIR=../S_templates
# TASKS_DIR=../tasks

GIT_WEBHOOK_SECRET=
GITHUB_TOKEN=
GIT_PROVIDER_TOKEN=

# Database Initial Data (optional - path to SQL dump file with INSERT statements)
# If specified and file exists, data will be loaded after schema initialization
# Example: DB_INITIAL_DATA=../scripts/webeval_data.sql
DB_INITIAL_DATA=
